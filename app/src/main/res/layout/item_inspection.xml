<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/normal"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/oval_bg_green" />

                <TextView
                    android:id="@+id/normal_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="巡查楼层：3楼"
                    android:textColor="@color/text_black_23"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/abnormal"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/oval_bg_red" />

                <TextView
                    android:id="@+id/abnormal_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="巡查楼层：3楼"
                    android:textColor="@color/text_black_23"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:id="@+id/arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="39dp"
                android:background="@mipmap/arrow_up" />
            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:paddingLeft="20dp"
                android:text="开始巡查时间：2020-06-08 22:30:20"
                android:textColor="@color/text_black_23"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:text="结束巡查时间：2020-06-08 23:30:20"
                android:textColor="@color/text_black_23"
                android:textSize="14sp" />
        </RelativeLayout>

        <GridLayout
            android:id="@+id/grid"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
           />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

    </LinearLayout>


</layout>
