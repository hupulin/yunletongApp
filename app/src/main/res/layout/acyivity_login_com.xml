<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_gravity="end"
        android:layout_marginRight="27dp"
        android:id="@+id/swift_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="普通登录"
        android:textColor="@color/text_blue"
        android:textSize="18sp" />

    <com.fskj.applibrary.util.PingFangTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="35sp" />




    <EditText
        android:id="@+id/phone"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:background="@drawable/login_bg"
        android:hint="账号"
        android:paddingLeft="29dp"
        android:textColor="@color/text_black_2c"
        android:textColorHint="@color/text_black_2c"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:background="@drawable/login_bg"
            android:hint="密码"
            android:paddingLeft="29dp"
            android:textColor="@color/text_black_2c"
            android:textColorHint="@color/text_black_2c"
            android:textSize="15sp" />

        <View
            android:id="@+id/see_password"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/see_psw" />

    </RelativeLayout>


    <com.ruffian.library.RTextView
        android:id="@+id/login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="74dp"
        app:corner_radius="6dp"
        android:text="登  录"
        android:gravity="center"
        app:background_normal="@color/app_color"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_width="321dp"
        android:layout_height="55dp" />



</LinearLayout>