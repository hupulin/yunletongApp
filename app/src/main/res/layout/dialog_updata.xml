<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:background="#5f000000">


    <RelativeLayout
        android:layout_width="324dp"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/around_10_withe"
            android:layout_centerHorizontal="true"
            android:layout_width="288dp"
            android:layout_height="306dp"
            android:orientation="vertical"
            >
            <View
                android:layout_marginTop="54dp"
                android:textColor="#0C0B0B"
                android:background="@mipmap/logo"
                android:layout_centerHorizontal="true"
                android:layout_width="65dp"
                android:layout_height="65dp" />
            <TextView
                android:layout_marginLeft="22dp"
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="134dp"
                android:layout_centerHorizontal="true"
                android:text="新版本升级"
                android:textColor="@color/text_black_23"
                android:textSize="16sp" />
            <TextView
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp"
                android:text="新版本升级"
                android:textColor="@color/text_black_3d"
                android:textSize="14sp" />

            <com.ruffian.library.RTextView
                android:id="@+id/confirm"
                android:layout_width="248dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="22dp"
                android:text="立即升级"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:background_normal="#E03F3F"
                app:corner_radius="10dp" />
        </RelativeLayout>
        <View
            android:id="@+id/cancel"
            android:layout_alignParentRight="true"
            android:background="@mipmap/cancle"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
    </RelativeLayout>


</RelativeLayout>