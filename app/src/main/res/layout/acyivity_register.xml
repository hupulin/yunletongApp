<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/title_layout"/>
    <com.fskj.applibrary.util.PingFangTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:text="注册"
        android:textColor="@color/text_black"
        android:textSize="35sp" />
    <EditText
        android:id="@+id/nickName"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:background="@drawable/login_bg"
        android:hint="昵称"
        android:maxLength="11"
        android:paddingLeft="29dp"
        android:textColor="@color/text_black_2c"
        android:textColorHint="@color/text_black_2c"
        android:textSize="15sp" />


        <EditText
            android:id="@+id/phone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:background="@drawable/login_bg"
            android:hint="手机号"
            android:inputType="number"
            android:paddingLeft="29dp"
            android:textColor="@color/text_black_2c"
            android:textColorHint="@color/text_black_2c"
            android:textSize="15sp" />




  <LinearLayout
      android:layout_marginLeft="44dp"
      android:layout_marginTop="34dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <RelativeLayout
          android:id="@+id/select_check"
          android:layout_width="25dp"
          android:layout_height="25dp">
          <View
              android:background="@mipmap/select_on"
              android:id="@+id/select"
              android:layout_centerInParent="true"
              android:layout_gravity="center_horizontal"
              android:layout_width="16dp"
              android:layout_height="16dp"
              />
      </RelativeLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="已阅读"
          android:textColor="@color/text_black"
          android:textSize="13sp" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="@string/agreement"
          android:textColor="@color/app_color"
          android:textSize="13sp" />

  </LinearLayout>

    <com.ruffian.library.RTextView
        android:id="@+id/register"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="注  册"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:background_normal="@color/app_color"
        app:corner_radius="10dp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="37dp"
        android:text="已有账号? - 登录"
        android:padding="10dp"
        android:textColor="@color/text_black"
        android:textSize="15sp" />

</LinearLayout>